# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,app,nginx

# CSRF trusted origins (important for nginx reverse proxy)
CSRF_TRUSTED_ORIGINS=http://localhost:9080,http://yourdomain.com

# Admin URL (change this to something random for security)
ADMIN_URL=secret-admin-portal-xyz123

# Database Configuration
# Postgres superuser (for initialization)
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-root-password

# Application database and user (created by pg_init scripts)
APP_DB=rosa_db
APP_USER=rosa_user
APP_USER_PWD=your-app-user-password

# Database connection settings
DB_NAME=rosa_db
DB_USER=rosa_user
DB_PASSWORD=your-app-user-password
DB_HOST=postgres
DB_PORT=5432

# Static & Media Files
STATIC_URL=/static/
STATIC_ROOT=/usr/src/app/static_collected
MEDIA_URL=/media/
MEDIA_ROOT=/usr/src/app/media

# Server Configuration
SERVER_NAME=localhost
APP_PORT=9000
NGINX_HTTP_PORT=9080
NGINX_HTTPS_PORT=9443

# Development Mode
DEV_MODE=False

# ========================================
# Association Configuration (IMPORTANT!)
# ========================================
# Personnalisez ces valeurs pour votre association.
# Ces noms apparaîtront sur :
#   - La page de connexion
#   - La barre de navigation (en haut à gauche)
#   - L'interface d'administration Django
#   - Le titre de la page dans le navigateur
#
# Exemples :
#   ASSOCIATION_NAME="Les Restos du Coeur"
#   ASSOCIATION_FULL_NAME="Les Restos du Cœur - Antenne de Paris"
#
#   ASSOCIATION_NAME="Secours Populaire"
#   ASSOCIATION_FULL_NAME="Secours Populaire Français - Comité de Lyon"
#
# Par défaut, le nom "ROSA" est utilisé.
ASSOCIATION_NAME=ROSA
ASSOCIATION_FULL_NAME=Réseau Ouvert de Solidarité et d'Assistance

# HelloAsso Integration
ENABLE_HELLOASSO_INTEGRATION=True
HELLOASSO_API_KEY=your-helloasso-api-key
HELLOASSO_API_SECRET=your-helloasso-api-secret
HELLOASSO_ORGANIZATION_SLUG=your-organization-slug
